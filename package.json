{
  "name": "recipes",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:seed": "node prisma/seed.js",
    "db:clean": "node prisma/clean.js",
    "db:reseed": "npm run db:clean && npm run db:seed",
    "db:reset": "npx prisma generate && rimraf prisma/migrations && rimraf dev.db && npx prisma migrate dev --name init && npm run db:seed"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "next": "16.1.1",
    "prisma": "^7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sass": "^1.97.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "rimraf": "^6.1.2",
    "typescript": "^5"
  }
}
